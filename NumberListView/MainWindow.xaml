<Window x:Class="List_of_Numbers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
        
    <Grid Background="White">
        <ListView x:Name="NumberList" Margin="250,117,268,250">
            <ListView.RenderTransform>
                <TransformGroup>
                </TransformGroup>
            </ListView.RenderTransform>
            <ListView.View>
                <GridView >
                    <GridViewColumn Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="DeleteButton" Margin="266,368,508,152" FontSize="15" Click="DeleteButton_Click" >
            Del
        </Button>
        <Button x:Name="AddButton" Margin="481,368,293,152" FontSize="15" Click="AddButton_Click">
            Add
        </Button>
    </Grid>
</Window>
